@{
    ViewBag.Title = "PurchaseOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        /* Container for the cards */
        .card-container {
            display: flex;
            justify-content: center; /* Center the cards horizontally */
            align-items: center; /* Center the cards vertically */
            gap: 30px; /* Increase space between cards */
            margin-top: 50px;
            flex-wrap: wrap;
            max-width: 100%; /* Make sure it takes full width */
            padding: 20px; /* Add padding around the container */
        }

        /* Style for individual card */
        .card {
            width: 320px; /* Increase the width of each card */
            background-color: #fff;
            border-radius: 15px; /* Slightly rounded corners */
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15); /* Larger shadow for more depth */
            overflow: hidden;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

            /* Hover effect on card */
            .card:hover {
                transform: translateY(-12px); /* Lift the card on hover */
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
            }

        /* Card body styles */
        .card-body {
            padding: 30px; /* Increase padding inside the card */
            text-align: center;
        }

        /* Image inside the card */
        .card-img {
            width: 140px; /* Increase image size */
            height: 140px;
            object-fit: contain;
            margin-bottom: 20px;
            border-radius: 50%;
            background-color: #f8f9fa;
            padding: 10px;
        }

        /* Card title styles */
        .card-title {
            font-size: 1.6rem; /* Larger font size */
            margin-bottom: 20px;
            color: #333;
            font-family: 'Nunito', sans-serif;
            font-weight: 700;
        }

        /* Button styling */
        .btn {
            padding: 12px 28px;
            font-size: 1.1rem; /* Slightly larger font for the button */
            text-decoration: none;
            border-radius: 8px;
            display: inline-block;
            font-weight: 600;
            transition: background-color 0.3s ease-in-out, transform 0.2s;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: scale(1.05);
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #565e64;
                transform: scale(1.05);
            }
    </style>
</head>

<h2 style="text-align: center; font-family: 'Nunito', sans-serif; font-size: 2.5rem; color: #343a40; margin-top: 30px;">Purchase Order Dashboard</h2>

<div class="card-container">
    <!-- Create Purchase Order Card -->
    <div class="card">
        <div class="card-body">
            <img src="~/Content/images/order1.png" alt="Create PO Icon" class="card-img">
            <h5 class="card-title">Create Purchase Order</h5>
            <a href="@Url.Action("CreatePO", "Chemist")" class="btn btn-primary">Create</a>
        </div>
    </div>

    <!-- View Purchase Order Card -->
    <div class="card">
        <div class="card-body">
            <img src="~/Content/images/order2.png" alt="View PO Icon" class="card-img">
            <h5 class="card-title">View Purchase Order</h5>
            <a href="@Url.Action("ViewPO", "Chemist")" class="btn btn-secondary">View</a>
        </div>
    </div>
</div>
