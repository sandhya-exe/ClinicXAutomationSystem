@model IEnumerable<ClinicXAutomationSystem.Models.patient>

@{
    ViewBag.Title = "All Patients";
}

<div class="container mt-4">
    <h2 class="text-center mb-3">All Patients</h2>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.name)</th>
                <th>@Html.DisplayNameFor(model => model.DOB)</th>
                <th>@Html.DisplayNameFor(model => model.contact)</th>
                <th>@Html.DisplayNameFor(model => model.email)</th>
                <th>@Html.DisplayNameFor(model => model.address)</th>
                <th>@Html.DisplayNameFor(model => model.gender)</th>
                <th>@Html.DisplayNameFor(model => model.status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                    <td>@Html.DisplayFor(modelItem => item.DOB)</td>
                    <td>@Html.DisplayFor(modelItem => item.contact)</td>
                    <td>@Html.DisplayFor(modelItem => item.email)</td>
                    <td>@Html.DisplayFor(modelItem => item.address)</td>
                    <td>@Html.DisplayFor(modelItem => item.gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.status)</td>
                    <td>
                        @if (item.account.ToUpper() == "UNREGISTERED")
                        {
                            <button class="btn btn-outline-primary">
                                @Html.ActionLink("Approve", "PatientAdd", new { id = item.patientID }, new { @class = "text-decoration-none text-primary" })
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-outline-secondary">
                                @Html.ActionLink("Edit", "PatientEdit", new { id = item.patientID }, new { @class = "text-decoration-none text-secondary" })
                            </button>
                            @*<button class="btn btn-outline-danger ms-2">
                                @Html.ActionLink("Remove", "PatientDelete", new { id = item.patientID }, new { @class = "text-decoration-none text-danger" })
                            </button>*@
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <p>
            @Html.ActionLink("Add New Patient", "PatientCreate", null, new { @class = "btn btn-success shadow-sm btn-lg" })
        </p>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">Back ></a>
    </div>
</div>

<style>
    table th, table td {
        vertical-align: middle;
    }

    .table {
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    .btn {
        padding: 8px 15px;
        font-size: 1rem;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
        background-color: #0069d9;
        color: white;
        text-decoration-color: white;
        border-color: #0069d9;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
        text-decoration-color:white;
        border-color: #6c757d;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
        text-decoration-color: white;
        border-color: #dc3545;
    }

    .btn-success {
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 6px;
    }

        .btn-success:hover {
            background-color: #28a745;
            color: white;
            text-decoration-color: white;
            border-color: #28a745;
        }

    .text-center {
        text-align: center;
    }

    .ms-2 {
        margin-left: 10px;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }
</style>
