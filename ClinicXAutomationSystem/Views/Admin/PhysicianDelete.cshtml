@model ClinicXAutomationSystem.Models.physician

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Delete Physician</h2>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Are you sure you want to delete this physician?</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-uppercase font-weight-bold">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.name)</dd>

                <dt class="col-sm-3 text-uppercase font-weight-bold">Specialisation</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Specialisation)</dd>

                <dt class="col-sm-3 text-uppercase font-weight-bold">Contact</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.contact)</dd>

                <dt class="col-sm-3 text-uppercase font-weight-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.email)</dd>

                <dt class="col-sm-3 text-uppercase font-weight-bold">Address</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.address)</dd>

                <dt class="col-sm-3 text-uppercase font-weight-bold">Registration No.</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.regNO)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg shadow-sm" />
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg shadow-sm ms-3">Back ></a>
            </div>
        }
    </div>
</div>

<style>
    .card {
        margin-top: 20px;
    }

    .form-actions input[type="submit"],
    .form-actions a {
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .form-actions input[type="submit"]:hover {
            background-color: #ff4d4d;
            border: 2px solid #ff4d4d;
            color: white;
        }

        .form-actions a:hover {
            background-color: #f1f1f1;
            border: 2px solid #f1f1f1;
        }

    .text-uppercase {
        text-transform: uppercase;
    }

    .font-weight-bold {
        font-weight: 600;
    }

    .card-header {
        font-size: 1.25rem;
        padding: 1rem;
    }
</style>
