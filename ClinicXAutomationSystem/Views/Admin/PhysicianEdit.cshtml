@model ClinicXAutomationSystem.Models.physician

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Container for centering the form -->
    <div class="container mt-5 d-flex justify-content-center">
        <div class="col-md-8">
            <h4 class="text-center mb-4">Edit Physician</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.physicianID)

            <!-- Name Field -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "col-md-3 col-form-label uppercase-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Specialisation Field -->
            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.Specialisation, htmlAttributes: new { @class = "col-md-3 col-form-label uppercase-label" })
