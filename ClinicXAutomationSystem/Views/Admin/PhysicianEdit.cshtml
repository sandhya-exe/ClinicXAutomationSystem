            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.regNO, htmlAttributes: new { @class = "col-md-3 col-form-label uppercase-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.regNO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.regNO, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    <input type="submit" value="Save Changes" class="btn btn-danger btn-lg w-100" />
                </div>
            </div>
        </div>
    </div>
}
<div class="mt-4 mb-3">
    @Html.ActionLink("Back >", "Index", new { @class = "btn btn-outline-secondary btn-sm" })
</div>

